{% if variant == "bip110" %}
# BIP-110 enabled - temporary data restrictions active
# Learn more: https://bip110.org/
{% endif %}

# Network
{% if network == "testnet" %}
testnet=1
{% elif network == "signet" %}
signet=1
{% elif network == "regtest" %}
regtest=1
{% endif %}

# Data
{% if txindex %}
txindex=1
{% endif %}
{% if prune > 0 %}
prune={{ prune }}
{% endif %}

# Performance
dbcache={{ dbcache | default(450) }}

# Network
listen=1
maxconnections={{ maxconnections | default(125) }}
{% if blocksonly %}
blocksonly=1
{% endif %}

{% if assumevalid %}
# Custom assume valid block
assumevalid={{ assumevalid }}
{% endif %}

# RPC Configuration
server=1
rpcuser={{ rpcuser }}
rpcpassword={{ rpcpassword }}
rpcbind=0.0.0.0
rpcallowip=127.0.0.1
rpcallowip=10.0.0.0/8
rpcallowip=172.16.0.0/12
rpcallowip=192.168.0.0/16

# ZMQ
zmqpubrawblock=tcp://0.0.0.0:28332
zmqpubrawtx=tcp://0.0.0.0:28333
zmqpubhashblock=tcp://0.0.0.0:28332
zmqpubhashtx=tcp://0.0.0.0:28333

# Logging
debug=0
printtoconsole=1

# Misc
disablewallet=1
